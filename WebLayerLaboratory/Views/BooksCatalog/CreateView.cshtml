@model DataIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="bd-content ps-lg-2">
    <h2 id="example">Example <a class="anchor-link" href="#example" aria-label="Link to this section: Example"></a></h2>
    <p>Form controls are styled with a mix of Sass and CSS variables, allowing them to adapt to color modes and support any customization method.</p>
    <div class="bd-example-snippet bd-code-snippet">
        @using (Html.BeginForm("Create", "BooksCatalog", FormMethod.Post))  
        {
            <input type="hidden" id="Id" name="Id" value="@Model.ObjBook.Id" />
            <div class="bd-example">
                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" name="Title" class="form-control" id="title" placeholder="Santa" value="@Model.ObjBook.Title" minlength="4" maxlength="50" required />
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Autor</label>
                    <input type="text" name="Author" class="form-control" id="Author" placeholder="Federico Gamboa" value="@Model.ObjBook.Author" minlength="4" maxlength="50" required />
                </div>
                <div class="mb-3">
                    <label for="editorial" class="form-label">Editorial</label>
                    <input type="text" name="Editorial" class="form-control" id="editorial" placeholder="Salamandra" value="@Model.ObjBook.Title" minlength="4" maxlength="50" required />
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Pais</label>
                    <select id="CountryId" name="CountryId" class="form-select" aria-label="Default select example" minlength="4" maxlength="50" required>
                        <option selected>--</option>
                        @foreach (var itm in Model.LstCountry)
                        {
                            var selected = itm.Id == Model.ObjBook?.ObjCountryViewModel?.Id ? "selected" : null;
                            <option selected="@selected"   value="@itm.Id">@itm.Name</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    @{ var valueYear = Model.ObjBook.Year == 0 ? "" : Model.ObjBook.Year.ToString(); }
                    <label for="year" class="form-label">Año</label>
                    <input name="Year" type="number" class="form-control" id="year" placeholder="1903" value="@valueYear" minlength="4" maxlength="4" required />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">GUARDAR</button>
                </div>
            </div>
        }
    </div>
</div>